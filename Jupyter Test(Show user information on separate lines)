#Write a code to show user information on separate lines
#Method 1
#Coding with \n function
print (" ◄ Name: Shamim \n ◄ Family: Fadaakar \n ◄ Address: Rasht-Iran \n ◄ Academic Education(s): BS of Software Engineering, MS of Accounting ")
########################################################################################################################################################################

#Method 2
# coding with 'Enter & triple quotation' methode
print ('''◄ Name: Shamim
◄ Family: Fadaakar
◄ Address: Rasht-Iran
◄ Academic Education(s): BS of Software Engineering, MS of Accounting''')
########################################################################################################################################################################

#Method 3
# coding with 'Input' methode, Re-Run this code to enter your own data :)
Name = input ("◄ Name: ")
FN = input ("◄ Family: ") # FN = Family Name
Address = input ("◄ Address: ")
Education = input ("◄ Academic Education: ")
print ("◄ Name: ",Name, '\n' ,"◄ Family: ",FN, '\n' ,"◄ Address ",Address,'\n',"◄ Academic Education ", Education,'\n')
#########################################################################################################################################################################

#Method 4
Name = "Shamim"
LastName = "Fadaakar"
Address = "Rasht-Iran"
Education = "BS of Software Engineering, MS of Accounting"
print(
      " ◄ Name:     ",Name,'\n' ,
      "◄ LastName: ",LastName, '\n' ,
      "◄ Address:  ",Address,'\n',
      "◄ Education:", Education,'\n'
)
###########################################################################################################################################################################

#Method 5
# simple print function 
Name = 'Shamim'
Family = 'Fadaakar'
Address = 'Rasht-Iran'
Education = 'BS of Software Engineering, MS of Accounting'

print('First name: ', Name)
print("Last name:   " + Family)
print('Address:     ' + Address)
print('Education:   ' + Education) #, sep="\n")
#############################################################################################################################################################################

#Method 6
# `+` operator 
Name = 'Shamim'
Family = 'Fadaakar'
Address = 'Rasht-Iran'
Education = 'BS of Software Engineering, MS of Accounting'

print('First name:  ' + Name, "Last Name:   " + Family, 'Address:     ' + Address, 'Education:   ' + Education, sep="\n")
#############################################################################################################################################################################

#Method 7
# use f-strings
Name = 'Shamim'
Family = 'Fadaakar'
Address = 'Rasht-Iran'
education = 'BS of Software Engineering, MS of Accounting'

print(f'Name:   {Name}', f"Family:    {Family}", f'Address:   {Address}', f'Education: {education}', sep="\n")
###########################################################################################################################################################################

#Method 8
# Use f-strings with padding inside to make them align
first_name = 'Shamim'
surname = 'Fadaakar'
address = 'Rasht-Iran'
education = 'BS of Software Engineering, MS of Accounting'

print(f'{"First name:" :<13}{first_name}', f'{"Surname:" :<13}{surname}', f'{"Address:" :<13}{address}', f'{"education:" :<13}{education}', sep="\n")
#########################################################################################################################################################################
